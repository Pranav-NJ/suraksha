{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ],
      "@/*": [
        "./client/src/*"
      ]
    }
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.d.ts",
    "shared/**/*.ts",
    "shared/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}